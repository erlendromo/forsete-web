<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Results</title>
  <link rel="icon" type="image/x-icon" href="images/favicon_io/favicon.ico">
  <link rel="stylesheet" href="/styles/output.css" />
  <script type="module" src="../js/controllers/components/comp-result.js" defer></script>
  <script type="module" src="../js/controllers/components/document-editor/document-editor.js" defer></script>
  <script type="module" src="../js/controllers/components/zoom-image.js" defer></script>

  <script type='module' src="../flowbite/flowbite.min.js" defer></script>

<body class="bg-gray-300 dark:bg-gray-900 text-white">
  <header>
    <%- include('./partials/header'); %>
  </header>
  <!-- drawer init and toggle -->
  <%- include('./partials/drawer/drawer'); %>
    <main class="min-h-screen">
      <!-- Layout structure -->
      <!-- Content container -->
      <div class="content-container">
        <!-- Left side - Image -->
        <!-- Image container -->
        <div class=" w-1/2 aspect-[4/3] pt-[20px] pr-[10px] pb-[20px] pl-[20px] flex flex-col box-border relative">
          <div class="image-zoom-wrapper">
            <div id="image-container">
              <!-- Image content goes here -->
            </div>

            <!-- Zoom controls -->
            <div class="zoom-controls">
              <button class="zoom-btn" id="zoom-out">-</button>
              <span class="zoom-level" id="zoom-level">100%</span>
              <button class="zoom-btn" id="zoom-in">+</button>
              <button class="zoom-btn" id="zoom-reset">â†º</button>
            </div>
          </div>
        </div>

        <!-- Right side - Editor -->
        <div class="editor-wrapper">
          <div id="editor-container" class="h-[50vh] w-full"></div>
          <div class="flex flex-col space-y-4 mt-2 max-h-120">
            <div class="mt-0">
              <button id="confirmBtn"
                class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg cursor-pointer">
                Confirm
              </button>
            </div>
            <div class="flex flex-col mt-10">
              <label for="exportFormat" class="mb-2 font-semibold text-sm text-gray-200">Choose export format:</label>
              <select id="exportFormat" class="bg-gray-800 text-white p-2 rounded border border-gray-600">
                <option value="plain_txt">TXT</option>
                <option value="json">JSON</option>
                <option value="plain_pdf">PDF</option>
              </select>
            </div>
            <div class="flex justify-between space-x-4">
              <button id="cancelBtn"
                class="inline-block bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-full cursor-pointer">
                Cancel
              </button>
              <button id="exportBtn"
                class="inline-block bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-full cursor-pointer">
                Export
              </button>
            </div>

          </div>
        </div>
      </div>
    </main>
</body>

</html>