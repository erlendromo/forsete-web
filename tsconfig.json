{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "rootDir": "src/",      // Source root is src/js
    "outDir": "public/js"     // Output goes to public/js
  },
  "include": [
    "src/**/*",
    "mocks/**/*",
    "**/*.json"
, "src/config"  ],
  "exclude": ["node_modules", "dist"]
}
