{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "rootDir": "src",      // Source root is src
    "outDir": "dist"     // Output goes to dist
  },
  "include": [
    "src/**/*",
    "**/*.json"
  ]
}
