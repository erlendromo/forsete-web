{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node10",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {                                   
      "@config/*": ["../src/config/*"],
      "@interfaces/*": ["../src/interfaces/*"],
      "@mocks/*": ["../src/mocks/*"],
      "@util/*": ["../src/util/*"],
      "@index/*": ["../src/index/*"],
    },
    "rootDir": "src/",      // Source root is src
    "outDir": "public/js"     // Output goes to public/js
  },
  "include": [
    "src/**/*",
    "mocks/**/*",
    "**/*.json"
, "src/config"  ],
  "exclude": ["node_modules", "public/js", "src/mocks/**/*.json"],
}
